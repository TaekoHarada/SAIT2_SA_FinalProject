@page "/report"

<h3>Reports</h3>

<form class="form-control bg-primary bg-opacity-10 border rounded mt-4 mb-2">
	<div class="row g-3">
		<div class="col-auto">
			<label for="name" class="col-form-label fw-bold">Sales by Rental Date:</label>
			<input id="name" placeholder="dd-mm-yyyy" class="form-control  form-control-sm mb-3" />
		</div>
		<div class="col-3 position-relative">
			<button @onclick="() => SalesByRentalDateHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm position-absolute bottom-0 mb-3">Show Report</button>
		</div>
	</div>
</form>

<form class="form-control bg-primary bg-opacity-10 border rounded mt-4 mb-2">
	<div class="row g-3">
		<div class="col-auto">
			<label for="name" class="col-form-label fw-bold">Sales by Customer:</label>
			<select class="form-select form-select-sm  mb-3">
				<option>John Doe</option>
			</select>
		</div>
		<div class="col-3 position-relative">
			<button @onclick="() => SalesByCustomerHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm position-absolute bottom-0 mb-3">Show Report</button>
		</div>
	</div>
</form>

<form class="form-control bg-primary bg-opacity-10 border rounded mt-4 mb-2">
	<div class="row g-3">
		<div class="col-auto">
			<label for="name" class="col-form-label fw-bold">List items by Category:</label>
			<select class="form-select form-select-sm  mb-3">
				<option>10: Power tools</option>
			</select>
		</div>
		<div class="col-3 position-relative">
			<button @onclick="() => ItemsByCategoryHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm position-absolute bottom-0 mb-3">Show Report</button>
		</div>
	</div>
</form>


<form class="form-control bg-primary bg-opacity-10 border rounded mt-4 mb-2">
	<div class="row g-3">
		<div class="col-auto">
			<label for="name" class="col-form-label fw-bold">Renting Customer List</label>
		</div>
		<div class="col-3 position-relative">
			<button class="btn btn-primary btn-sm position-absolute bottom-0 mb-1">Show Report</button>
		</div>
	</div>
</form>

@code {

	[Inject] NavigationManager NavigationManager { get; set; }

	private void SalesByRentalDateHandler()
	{
		NavigationManager.NavigateTo("/report/salesByRentalDate");
	}

	private void SalesByCustomerHandler()
	{
		NavigationManager.NavigateTo("/report/salesByCustomer");
	}

	private void ItemsByCategoryHandler()
	{
		NavigationManager.NavigateTo("/report/itemsByCategory");
	}

}
