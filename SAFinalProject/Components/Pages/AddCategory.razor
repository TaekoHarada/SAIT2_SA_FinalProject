@page "/addCategory"

<h3>Add New Category</h3>

<EditForm Model="@category">
	<div>
		<label for="categoryId" class="col-form-label fw-bold">Category ID</label>
		<InputText id="categoryId" @bind-Value="@category.CategoryId" class="form-control form-control-sm" />
	</div>
	<div>
		<label for="categoryName" class="col-form-label fw-bold">Category Name</label>
		<InputText id="categoryName" @bind-Value="@category.CategoryName" class="form-control form-control-sm" />
	</div>
	<div class="mt-3">
		<button @onclick="() => AddCategoryHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Add New</button>
	</div>
</EditForm>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Created!
	</div>
}
