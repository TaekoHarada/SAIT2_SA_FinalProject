@page "/addcustomer"

<h3>Add New Customer</h3>

<EditForm Model="@customer">
	<div>
		<label for="lastName" class="col-form-label fw-bold">Last Name</label>
		<InputText id="lastName" @bind-Value="@customer.LastName" class="form-control form-control-sm" />
	</div>
	<div>
		<label for="firstName" class="col-form-label fw-bold">First Name</label>
		<InputText id="firstName" @bind-Value="@customer.FirstName" class="form-control form-control-sm" />
	</div>
	<div>
		<label for="phone" class="col-form-label fw-bold">Phone</label>
		<InputText id="phone" @bind-Value="@customer.Phone" class="form-control form-control-sm" />
	</div>
	<div>
		<label for="email" class="col-form-label fw-bold">E-mail</label>
		<InputText id="email" @bind-Value="@customer.Email" class="form-control form-control-sm" />
	</div>
	<div class="mt-3">
		<button @onclick="() => AddCustomerHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Add New</button>
	</div>
</EditForm>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Created!
	</div>
}
