@page "/editCategory/{CategoryId}"

<h3>Edit Category</h3>

<EditForm Model="@category">
	<div>
		<label class="col-form-label fw-bold">Category ID</label>
		<div>@category.CategoryId</div>
	</div>
	<div>
		<label class="col-form-label fw-bold">Category Name</label>
		<InputText id="categoryName" @bind-Value="@category.CategoryName" class="form-control form-control-sm" />
	</div>
</EditForm>

<div class="mt-3">
	<button @onclick="() => UpdateCategoryHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Save</button>
</div>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Updated
	</div>
}
