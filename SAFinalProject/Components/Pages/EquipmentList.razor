@page "/equipmentList"

<h1>Equipment List</h1>

	<form class="form-control bg-primary bg-opacity-10 border rounded mt-4 mb-2">
		<div class="row g-3">
			<div class="col-auto">
				<label for="name" class="col-form-label fw-bold">Name:</label>
				<InputText id="name" @bind-Value="@Name" placeholder="Name" class="form-control  form-control-sm mb-3" />
			</div>
			<div class="col-3 position-relative">
				<button @onclick="() => SearchEquipmentHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm position-absolute bottom-0 mb-3">Search</button>
			</div>
		</div>
	</form>

<div>
	<button @onclick="() => AddEquipment()" class="btn btn-primary btn-sm mb-3">Add New</button>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Equipment ID</th>
			<th>Category ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Cost</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var equipment in equipments)
		{
			<tr>
				<td>@equipment.EquipmentId</td>
				<td>@equipment.CategoryId</td>
				<td>@equipment.EquipmentName</td>
				<td>@equipment.Description</td>
				<td>@equipment.DailyRentalCost</td>
				<td class="text-center">
					<button @onclick="() => EditEquipmentHandler(equipment)" class="btn btn-sm btn-warning">Edit</button>
				</td>
				<td class="text-center">
					<button @onclick="() => DeleteEquipmentHandler(equipment)" class="btn btn-sm btn-danger">Delete</button>
				</td>
			</tr>
		}
	</tbody>
</table>
