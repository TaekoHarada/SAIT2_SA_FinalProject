@page "/addequipment"

<h3>Add New Equipment</h3>

<EditForm Model="@equipment">
	<div>
		<label class="col-form-label fw-bold">Equipment ID</label>
		<InputText id="equipmentId" @bind-Value="@equipment.EquipmentId" class="form-control form-control-sm" />
	</div>
	<div>
		<label class="col-form-label fw-bold">Equipment Name</label>
		<InputText id="equipmentName" @bind-Value="@equipment.EquipmentName" class="form-control form-control-sm" />
	</div>
	<div>
		<label class="col-form-label fw-bold">Category</label>
		<select id="categoryId" @bind="equipment.CategoryId" class="form-select form-select-sm">
			@foreach (var category in categories)
			{
				<option value="@category.CategoryId">@category.CategoryId : @category.CategoryName</option>
			}
		</select>
	</div>
	<div>
		<label class="col-form-label fw-bold">Description</label>
		<InputText id="description" @bind-Value="@equipment.Description" class="form-control form-control-sm" />
	</div>
	<div>
		<label class="col-form-label fw-bold">Rental Cost</label>
		<InputText id="dailyRentalCost" @bind-Value="@equipment.StringDailyRentalCost" class="form-control form-control-sm" />
	</div>
	<div class="mt-3">
		<button @onclick="() => AddEquipmentHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Add New</button>
	</div>
</EditForm>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Created!
	</div>
}
